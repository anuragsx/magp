
<section class="panel">
  <header class="panel-heading font-bold">
    <%= (controller_name=="issues" && action_name == "new") ?  "New Issue" : "Edit Issue"%>
  </header>
  <div class="panel-body">
    <%= form_for([@magazine, @issue], html: {class:"form-horizontal", multipart: true}) do |f| %>
        <%= error_messages!(@issue)%>
        <div class="form-group">
          <%= f.label "Name", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Cover Image", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.file_field :cover_image %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label "PDF Upload", class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.file_field :pdf_file_name%>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label :print_deadline, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :print_deadline, class: "form-control", id: "datepicker" %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-2">
            <% button = (controller_name=="issues" && action_name == "new") ?  "Create" : "Update"%>
            <%= f.submit button, class: "btn btn-primary" %>
          </div>
        </div>
    <%end%>
  </div>
</section>

<script>
    $(function() {
        var $j = jQuery.noConflict();
        $j("#datepicker").datepicker();
    });
</script>

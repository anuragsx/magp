  <%= link_to "Create New Issue", new_magazine_issue_path(magazine_id: params[:magazine_id]), class: "btn btn-sm btn-success"%>
  <% if  !@issues.blank? %>
  <% @issues.each_slice(3) do |slice| -%>
      <div class="row">
      <%slice.each do |issue|%>
         <div class="col-lg-4">
          <section class="panel">
            <header class="panel-heading font-bold"><%= issue.name%></header>
            <div class="panel-body text-center">
              <div data-height="150"><%= link_to (image_tag (sample_image(issue))), issue_articles_path(:issue_id => issue, magazine_id: params[:magazine_id])  %></div>
              <div class="line pull-in"></div>
              <div class="text-xs">
                 <span>Print Deadline : <%= issue.print_deadline%></span> |
                 <span><%= link_to '<i class="fa fa-download"></i>'.html_safe, issue.pdf_file_name.url(:original, false)%></span> |
                 <span><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_issue_path(issue), title: "Edit"%></span> |
                 <span><%= link_to '<i class="fa fa-times text-danger text"></i>'.html_safe, issue_path(issue), method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete"%></span>
              </div>
            </div>
         </section>
        </div>
      <%end%>
     </div>
  <% end -%>
  <% else%>
      <div class="row">
        <div class="col-lg-4">
          <div class="panel-body text-center">
            No Issues found for selected Magazine.
          </div>
        </div>
      </div>
  <%end%>

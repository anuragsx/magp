    <table class="table table-striped b-t text-sm">
      <thead>
      <tr>
        <th colspan="7"><%= link_to "Create New Article", new_issue_article_path(issue_id: params[:issue_id], :magazine_id => params[:magazine_id]), class: "btn btn-sm btn-success"%></th>
      </tr>

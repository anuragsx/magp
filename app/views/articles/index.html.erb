      </thead>
      <tbody>
      <% @articles.each do |article| %>
          <tr>
            <!--<td><input type="checkbox" name="post[]" value="2"></td>-->
            <td><%= link_to article.title, article_path(article, issue_id: params[:issue_id], :magazine_id => params[:magazine_id])%></td>
            <td><%= article.contributor%></td>
            <td><%= article.deadline%></td>
            <td>
              <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_article_path(article, :issue_id => params[:issue_id], :magazine_id => params[:magazine_id]), title: "Edit"%> | <%= link_to '<i class="fa fa-times text-danger text"></i>'.html_safe, article, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete"%>

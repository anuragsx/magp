<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
  <a class="nav-brand" href="index.html">Application Name</a>
  <div class="row m-n">
    <div class="col-md-4 col-md-offset-4 m-t-lg">
      <section class="panel">
        <header class="panel-heading text-center">
          Change your password
        </header>
        <br />
        <% flash.each do |name, msg| %>
            <% if msg.is_a?(String) %>
                <%= content_tag :div, msg, :class => "flash_#{name}", style: "margin-left:17px;color:red;" %>
            <% end %>
        <% end %>
        <%= devise_error_messages! %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:"panel-body" }) do |f| %>
            <div class="form-group">
              <%= f.hidden_field :reset_password_token %>
              <label class="control-label">New Password</label>
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="control-label">Confirm new password</label>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
            <!--<a href="#" class="pull-right m-t-xs"><small>Forgot password?</small></a>-->
            <%= f.submit "Change my password", class: "btn btn-info" %>
            <div class="line line-dashed"></div>
            <!--
            <a href="#" class="btn btn-facebook btn-block m-b-sm"><i class="fa fa-facebook pull-left"></i>Sign in with Facebook</a>
            <a href="#" class="btn btn-twitter btn-block"><i class="fa fa-twitter pull-left"></i>Sign in with Twitter</a>
            -->
            <div class="line line-dashed"></div>
        <% end %>
      </section>
    </div>
  </div>
</section>

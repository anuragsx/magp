<section id="content" class="m-t-lg wrapper-md animated fadeInDown">
  <a class="nav-brand" href="index.html">Application Name</a>
  <div class="row m-n">
    <div class="col-md-4 col-md-offset-4 m-t-lg">
      <section class="panel">
        <header class="panel-heading bg bg-primary text-center">
          Sign up
        </header>
        <%= devise_error_messages! %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "panel-body"}) do |f| %>
          <div class="form-group">
            <label class="control-label">Your email address</label>
            <%= f.email_field :email, autofocus: true, placeholder: "test@example.com", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Type a password", class: "control-label" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
            <div class="form-group">
              <%= f.label "Type a password to confirm", class: "control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          <div class="checkbox">
            <!--
            <label>
              <input type="checkbox"> Agree the <a href="#">terms and policy</a>
            </label>
            -->
          </div>
            <%= f.submit "Sign up", class: "btn btn-info" %>
          <div class="line line-dashed"></div>
          <p class="text-muted text-center"><small>Already have an account?</small></p>
          <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-white btn-block" %><br />
          <% end -%>
        <% end %>
      </section>
    </div>
  </div>
</section>

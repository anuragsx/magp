<section class="panel">
  <header class="panel-heading font-bold">
    <%= (controller_name=="contacts" && action_name == "new") ?  "New Contact" : "Edit Contact"%>
  </header>
  <div class="panel-body">
    <%= form_for(@contact, html: {class:"form-horizontal"}) do |f| %>
        <%= error_messages!(@contact)%>
        <div class="form-group">
          <%= f.label :name, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label :address, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_area :address, class: "form-control" %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label :city, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label :state, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label :zip, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :zip, class: "form-control" %>
          </div>
        </div>
        <div class="line line-dashed line-lg pull-in"></div>
        <div class="form-group">
          <%= f.label :phone, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :phone, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :organization, class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.collection_select :organization_id, Organization.all, :id, :name, {:prompt => 'Choose an Organization'}, class:  "form-control"%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-2">
            <% button = (controller_name=="contacts" && action_name == "new") ?  "Create" : "Update"%>
            <%= f.submit button, class: "btn btn-primary" %>
          </div>
        </div>
    <%end%>
  </div>
</section>
